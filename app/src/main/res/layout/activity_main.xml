<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onClearClick"
                android:text="@string/clear"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <ImageButton
                android:id="@+id/backspace"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onBackspaceClick"
                android:src="@drawable/abc_vector_test"
                android:text="@string/backspace"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/exponent"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/exponent"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/div"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/seven"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/eight"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/nine"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/mult"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/four"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/five"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/six"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/sub"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/one"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/two"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/three"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/add"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onPlusMinusClick"
                android:text="@string/posNeg"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/zero"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="onDigitPress"
                android:text="@string/decimal"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/calculator_button"
                android:onClick="equalsClick"
                android:text="@string/equals"
                android:textSize="30sp"
                app:backgroundTint="#2299bb" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/CalculatorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/concert_one"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>